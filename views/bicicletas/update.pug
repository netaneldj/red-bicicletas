extends ../layout

block content
  .container.mt-3
    a(href='/bicicletas') Volver
    hr
    .m-2
      h1 Actualizar Bicicleta

    .mt-3.mb-3
      form(action='/bicicletas/update' method='POST')
        .form-group
        label(for='code') Code
        input#id.form-control(type='text' name='code' value=bici.code)
        .form-group
        label(for='color') Color
        input#color.form-control(type='text' name='color' value=bici.color)
        .form-group
        label(for='modelo') Modelo
        input#modelo.form-control(type='text' name='modelo' value=bici.modelo)
        .form-group
        label(for='lat') Latencia
        input#lat.form-control(type='text' name='lat' value=bici.ubicacion[0])
        .form-group
        label(for='lng') Longitud
        input#log.form-control(type='text' name='lng' value=bici.ubicacion[1])
        button.btn.btn-primary.m-2(type='submit') Actualizar


