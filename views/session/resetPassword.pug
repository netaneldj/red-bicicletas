head
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' integrity='sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z' crossorigin='anonymous')
    link(href='/stylesheets/login.css' rel='stylesheet')

block content
    .container
        .row
            .col-sm-9.col-md-7.col-lg-5.mx-auto
                .card.card-signin.my-5
                    .card-body
                        h5.card-title.text-center Reset Password
                        if err
                            .alert.alert-danger(role='alert')
                                | #{err.message}
                        p Hello #{userName}, Recover your password
                        form.form-signin(action=`/resetPassword/${token}` method="post")
                            input(type='text' hidden="true" name='nameUser' value=`${userName}`)
                            .form-label-group
                                input#username.form-control(type='password' placeholder='New password' name='newPassword' required='' autofocus='')
                                label(for='username') New password
                            .form-label-group
                                input#password.form-control(type='password' placeholder='Confirm password' name='confirmNewPassword'  required='')
                                label(for='password') Confirm Password
                            button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Reset Password
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js")